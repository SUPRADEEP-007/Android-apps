<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXAMS"
                android:gravity="center"
                android:textSize="28dp"
                android:textStyle="bold"
                android:id="@+id/ex">
            </TextView>

            <TextView
                 android:id="@+id/button1"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/curve_border"
                  android:text="*Coding exams"
                 android:textSize="24dp"
                android:layout_below="@+id/ex"
                android:drawableRight="@drawable/arrowdown"/>
        <TextView
        android:id="@+id/contentView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:visibility="gone"
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>

        <TextView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentView1"
        android:background="@drawable/curve_border"
        android:text="*Cocubes"
        android:textSize="24dp"
            android:drawableRight="@drawable/arrowdown"/>
        <TextView
        android:id="@+id/contentView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:visibility="gone"
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>

       <TextView
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentView2"
        android:background="@drawable/curve_border"
        android:text="*FirstNaukri"
        android:textSize="24dp"
           android:drawableRight="@drawable/arrowdown"/>
        <TextView
        android:id="@+id/contentView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:visibility="gone"
            android:textSize="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"/>

        <TextView
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentView3"
        android:background="@drawable/curve_border"
        android:text="*Govt Tech Jobs"
        android:textSize="24dp"
            android:drawableRight="@drawable/arrowdown"/>
       <TextView
        android:id="@+id/contentView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:visibility="gone"
           android:textSize="18dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="5dp"/>

       <TextView
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contentView4"
        android:background="@drawable/curve_border"
        android:text="*Scholorships"
        android:textSize="24dp"
           android:drawableRight="@drawable/arrowdown"/>
       <TextView
        android:id="@+id/contentView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:visibility="gone"
           android:textSize="18dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentView5"
                android:background="@drawable/curve_border"
                android:text="*Higher Studies"
                android:textSize="24dp"
                android:drawableRight="@drawable/arrowdown"/>
            <TextView
                android:id="@+id/contentView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button6"
                android:visibility="gone"
                android:textSize="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
